/* 浮层引导 dom 区 */
.grace-mask-layer{width:100%; height:100%; background:rgba(0,0,0,0.8); position:fixed; z-index:9998; left:0; top:0;}

/* 引导1 指向 logo 故 top 为 12upx left 为 6upx */
.grace-guide1{width:380rpx; position:absolute; z-index:9999; left:12rpx; top:6rpx;}
.grace-guide1 image{width:380rpx;}

/* 引导2 指向右上角按钮 故 top 为 12upx right 为 0upx */
.grace-guide2{width:220rpx; position:absolute; z-index:9999; right:50rpx; top:0rpx;}
.grace-guide2 image{width:220rpx;}

/* 引导按钮 bottom为 100upx left 为 0upx */
.grace-guide-btn{width:750rpx; position:absolute; z-index:9999; left:0rpx; bottom:100rpx;}
.grace-guide-btn image{width:750rpx;}

/* 请根据项目需求自行设置 */
.grace-guide-other{width:750rpx; position:absolute; z-index:9999; left:0rpx; top:500rpx;}
.grace-guide-other image{width:750rpx;}

